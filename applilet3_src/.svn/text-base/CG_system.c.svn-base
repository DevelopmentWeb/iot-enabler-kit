/*
**-----------------------------------------------------------------------------
**
**  Abstract:
**	This function initializes the clock generator.
**
**  Parameters:
**	None
**
**  Returns:
**	None
**
**-----------------------------------------------------------------------------
*/
void CLOCK_Init(void)
{
	UCHAR temp_stabset, temp_stabwait;	

	/* Set fMX */
	CMC = _40_CG_HISYS_OSC | _00_CG_SUB_PORT | _01_CG_SYSOSC_OVER10M | _00_CG_SUBMODE_DEFAULT;
	OSTS = _07_CG_OSCSTAB_SEL18;
	MSTOP = 0U;
	temp_stabset = _FF_CG_OSCSTAB_STA18;
	do
	{
		temp_stabwait = OSTC;
		temp_stabwait &= temp_stabset;
	}
	while (temp_stabwait != temp_stabset);
	/* Set fMAIN */
	MCM0 = 0U;
	/* Set fSUB */
	XTSTOP = 1U;
	OSMC = _10_CG_RTC_CLK_FIL;
	/* Set fCLK */
	CSS = 0U;
	/* Set fIH */
	HIOSTOP = 0U;
}

